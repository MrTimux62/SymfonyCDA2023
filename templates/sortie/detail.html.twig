{% extends 'base.html.twig' %}

{% block title %}Afficher une sortie |
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h5 class="m-0">Afficher une sortie</h5>
        </div>
        <div class="card-body">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item info">
                                <span class="info-label">Nom de la sortie :</span>
                                <span class="info-value">{{ sortie.nom }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Date et heure de la sortie :</span>
                                <span class="info-value">{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Date limite d'inscription : </span>
                                <span class="info-value">{{ sortie.dateLimiteInscription|date('d/m/Y') }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Nombre de places : </span>
                                <span class="info-value">{{ sortie.nbInscriptionsMax }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Dur√©e : </span>
                                <span class="info-value">{{ sortie.duree }} minutes</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Description et infos : </span>
                                <span class="info-value">{{ sortie.infosSortie }}</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-group">
                            <li class="list-group-item info">
                                <span class="info-label">Campus : </span>
                                <span class="info-value">{{ sortie.Campus.nom }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Ville : </span>
                                <span class="info-value">{{ sortie.Lieu.Ville.nom }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Lieu : </span>
                                <span class="info-value">{{ sortie.Lieu.nom }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Rue : </span>
                                <span class="info-value">{{ sortie.Lieu.rue }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Code postal : </span>
                                <span class="info-value">{{ sortie.Lieu.Ville.codePostal }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Latitude : </span>
                                <span class="info-value">{{ sortie.Lieu.latitude }}</span>
                            </li>
                            <li class="list-group-item info">
                                <span class="info-label">Longitude : </span>
                                <span class="info-value">{{ sortie.Lieu.longitude }}</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mt-4">
                    <h6>Liste des participants inscrits :</h6>
                    <div class="col-3">
                        <table class="table table-striped col-6">
                            <thead>
                            <tr>
                                <th>Pseudo</th>
                                <th>Nom</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for participant in sortie.participants %}
                                <tr>
                                    <td><a class="text-primary text-decoration-none" href="{{ path('profil_view', {'id': participant.id }) }}">{{ participant.pseudo }}</a></td>
                                    <td>{{ participant.prenom }} {{ participant.nom }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
