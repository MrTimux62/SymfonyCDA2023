                <span class="d-none d-lg-block ms-2">Sortir.com</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <nav class="navbar navbar-expand-lg ms-auto">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('sortie_list')}}"> Accueil </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('profil')}}"> Mon compte </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout')}}"> Me déconnecter </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login')}}"> Me connecter </a>
                        </li>
                    {% endif %}

                    </ul><!-- End Profile Dropdown Items -->
                </ul><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') != 'sortie_list' %}collapsed{% endif %}" href={{ path('sortie_list') }}>
                    <i class="fs-3 bx bx-list-ul"></i>
                    <span>Voir les sorties</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') != 'ville_list' %}collapsed{% endif %}" href={{ path('ville_list') }}>
                    <i class="fs-3 bx bxs-city"></i>
                    <span>Gestion des villes</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link {% if app.request.attributes.get('_route') != 'campus_list' %}collapsed{% endif %}" href={{ path('campus_list') }}>
                    <i class="fs-3 bx bx-bus-school"></i>
                    <span>Gérer les campus</span>
                </a>
            </li>

        </ul>

    </aside><!-- End Sidebar-->

        <main id="main" class="main">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			<section class="section">
                {% block body %}{% endblock %}
			</section>
		</main>

        <!-- ======= Footer ======= -->
        <footer id="footer" class="footer">
            <div class="credits">
                2023 Symfony Project - Eni Ecole
            </div>
            <div class="credits">
                Tim - Harushan - Salomé - Lucas
            </div>
        </footer><!-- End Footer -->

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Vendor JS Files -->
            <script src={{ asset('assets/vendor/apexcharts/apexcharts.min.js') }}></script>
            <script src={{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}></script>
            <script src={{ asset('assets/vendor/chart.js/chart.umd.js') }}></script>
            <script src={{ asset('assets/vendor/echarts/echarts.min.js') }}></script>
            <script src={{ asset('assets/vendor/quill/quill.min.js') }}></script>
            <script src={{ asset('assets/vendor/simple-datatables/simple-datatables.js') }}></script>
            <script src={{ asset('assets/vendor/tinymce/tinymce.min.js') }}></script>
            <script src={{ asset('assets/vendor/php-email-form/validate.js') }}></script>
            <script src={{ asset('assets/vendor/jquery/jquery.js') }}></script>

            <!-- Template Main JS File -->
            <script src={{ asset('assets/js/main.js') }}></script>

        {% endblock %}

        {% block custom_js %}{% endblock %}

    </body>
</html>
