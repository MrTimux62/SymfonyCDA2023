{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.nom }} {{ app.user.prenom }}!{% endblock %}

{% block body %}

<section class="section profile">
    {% for message in app.flashes('invalid_message') %}
        <div class="col-xs4">
            <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="{{ asset('images/' ~ app.user.Image) }}" alt="Avatar de {{ app.user.pseudo }}" class="rounded-circle">
                    <h2>Modification du profil de {{ app.user.nom }} {{ app.user.prenom }}</h2>
                </div>
            </div>
        </div>

        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pt-3">
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Modifier mon mot de passe</button>
                        </li>

                        <li class="nav-item">
                            <a href="{{ path('profil')}}">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Mon profil</button>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="{{ path('profil_modifier') }}">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#password-edit">Modifier mon profile</button>
                            </a>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h5 class="card-title">Modifier votre mot de passe</h5>
                            <div class="row">
                                <div class="col-lg-9 col-md-8">{{ form(form) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
